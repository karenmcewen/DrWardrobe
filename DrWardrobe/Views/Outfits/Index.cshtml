@model IEnumerable<DrWardrobe.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="outfit">
    <p>
        @Html.ActionLink("Create New Outfit", "Create")
    </p>
    <table class="table">

        <tr>
            <th>
                TOP
            </th>
            <th>
               BOTTOM
            </th>
            <th>
                NECKWEAR
            </th>
            <th>
                OUTERWEAR
            </th>
            <th>
                ACCESSORY
            </th>
            <th>OPTIONS</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Top.TopName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Bottom.BottomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NeckWear.NeckWearName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OuterWear.OuterWearName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accessory.AccessoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OutfitID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OutfitID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OutfitID })
                </td>
            </tr>
        }

    </table>
</div>
