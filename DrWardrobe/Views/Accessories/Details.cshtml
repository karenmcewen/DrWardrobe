@model DrWardrobe.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<h2>Details - Accessories</h2>

<div>
   

    <!--adding an image to the header using background class "backgroundImgCategoryIndex"
       image and styling goes in content\Site.css
       -->
    <div class="backgroundImgCategoryIndex">

        <p>ACCESSORY</p>
        <hr />

        <div class="row">

            <div class="thumbnail">

                <div class="caption">
                    <h3>ITEM: @Html.DisplayFor(model => model.AccessoryName)</h3>
                    <h3>TYPE: @Html.DisplayFor(model => model.AccessoryType)</h3>
                    <h3>COLOR:@Html.DisplayFor(model => model.Color.ColorFamily)</h3>
                    <h3>OCCASION:@Html.DisplayFor(model => model.Occasion.OccasionType)</h3>
                    <h3>SEASON:@Html.DisplayFor(model => model.Season.SeasonName)</h3>
                    <h3>PHOTO URL:@Html.DisplayFor(model => model.AccessoryPhotoURL)</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New Accessory", "Create") |
    @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
