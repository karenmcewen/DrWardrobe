@model IEnumerable<DrWardrobe.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2>TOPS</h2>

<p>
    @Html.ActionLink("Create New Top", "Create")
</p>
<table class="table">
    <tr>
        <th>Top        </th>
        <th>Type        </th>
        <th>Color        </th>
        <th>Occasion        </th>
        <th>Season        </th>
        <th>Photo URL        </th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TopName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TopType)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Color.ColorFamily)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Occasion.OccasionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Season.SeasonName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.TopPhotoURL)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TopID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TopID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TopID })
        </td>
    </tr>
}

</table>
