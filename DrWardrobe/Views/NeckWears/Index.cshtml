}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Neckwear", "Create")
</p>

<ul id="hexGrid">
    <li class="hex">
        <div class="hexIn">
            <a class="hexLink" href="#">


            </a>
        </div>
    </li>
    <li class="hex">
        <div class="hexIn">
            <a class="hexLink" href="#">

                <img src="~/Images/bowtie.jpg" alt="bowtie"/>
            </a>
        </div>
