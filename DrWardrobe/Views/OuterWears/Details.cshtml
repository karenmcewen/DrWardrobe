@model DrWardrobe.Models.OuterWear

@{
    ViewBag.Title = "Details";
}

<h2>Details - Outerwear</h2>
<!--adding an image to the header using background class "backgroundImgCategoryIndex"
     image and styling goes in content\Site.css
     -->
<div class="backgroundImgCategoryIndex">

    <p>OUTERWEAR</p>
    <hr />

    <div class="row">

        <div class="thumbnail">

            <div class="caption">
                <h3>ITEM: @Html.DisplayFor(model => model.OuterWearName)</h3>
                <h3>TYPE: @Html.DisplayFor(model => model.OuterWearType)</h3>
                <h3>COLOR:@Html.DisplayFor(model => model.Color.ColorFamily)</h3>
                <h3>OCCASION:@Html.DisplayFor(model => model.Occasion.OccasionType)</h3>
                <h3>SEASON:@Html.DisplayFor(model => model.Season.SeasonName)</h3>
                <h3>PHOTO URL:@Html.DisplayFor(model => model.OuterWearPhotoURL)</h3>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Create New Accessory", "Create") |
    @Html.ActionLink("Edit", "Edit", new { id = Model.OuterWearID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

